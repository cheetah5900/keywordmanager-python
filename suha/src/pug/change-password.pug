doctype html
html(lang="en")
    head
        include inc/head.pug

    body
        include inc/loader.pug

        // Header Area
        .header-area#headerArea
            .container.h-100.d-flex.align-items-center.justify-content-between
                // Back Button
                .back-button
                    a(href="settings.html")
                        svg(xmlns="http://www.w3.org/2000/svg", width="24", height="24", fill="currentColor", class="bi bi-arrow-left", viewBox="0 0 16 16")
                            path(fill-rule="evenodd", d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z")

                // Page Title
                .page-heading
                    h6.mb-0 Change Password

                // Navbar Toggler
                .suha-navbar-toggler.d-flex.justify-content-between.flex-wrap#suhaNavbarToggler
                    span
                    span
                    span

        include inc/sidenav.pug

        .page-content-wrapper
            .container
                // Profile Wrapper
                .profile-wrapper-area.py-3
                    // User Information
                    .card.user-info-card
                        .card-body.p-4.d-flex.align-items-center
                            .user-profile.me-3
                                img(src="img/bg-img/9.jpg", alt="")
                            .user-info
                                p.mb-0.text-white @designing-world
                                h5.mb-0 Suha Jannat

                    // User Meta Data
                    .card.user-data-card
                        .card-body
                            form(action="#" method="")
                                .mb-3
                                    .title.mb-2
                                        i.lni.lni-key
                                        span Old Password
                                    input.form-control(type="password")

                                .mb-3
                                    .title.mb-2
                                        i.lni.lni-key
                                        span New Password
                                    input.form-control(type="password")

                                .mb-3
                                    .title.mb-2
                                        i.lni.lni-key
                                        span Repeat New Password
                                    input.form-control(type="password")

                                button.btn.btn-success.w-100(type="submit") Update Password

        include inc/footer-nav.pug

        include inc/footer-no-internet.pug